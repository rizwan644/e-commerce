<%- include('../layout/adminHeader.ejs') %>

    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Users List </h2>
                    <p>Whole data about Users</p>
                </div>
            
            </div>
      
               
                  
            <div class="card mb-4">
                <header class="card-header">
                    <h4 class="card-title">Latest orders</h4>
                
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <table class="table align-middle table-nowrap mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th scope="col" class="text-center">SL No.</th>
                                                    <th scope="col" >Name</th>
                                                    <th scope="col">Email</th>
                                                    <th scope="col">Mobile Number</th>
                                                    <th scope="col">Status</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% user.forEach((user) => { %>
                                                    <tr>
                                                        <td>1</td>
                                                        <td><%= user.username %></td>
                                                        <td><%= user.email %></td>
                                                        <td><%= user.mobile %></td>
                                                        <td>
                                                            <% if (user.isBlocked===false) { %>
                                                                <span style="color: green;">Active</span>
                                                            <% } else { %>
                                                                <span style="color: red;">Blocked</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <% if (user.isBlocked==false) { %>
                                                                    <!-- Check if the user is blocked -->
                                                                    <a href="/admin/blockUser?id=<%= user._id %>">
                                                                        <i class="bx bx-trash me-1"></i> Block
                                                                        <!-- Display the "Block" button -->
                                                                    </a>
                                                                <% } else { %>
                                                                    <!-- If the user is not blocked -->
                                                                    <a href="/admin/unBlockUser?id=<%= user._id %>">
                                                                        <i class="bx bx-trash me-1"></i> Unblock
                                                                        <!-- Display the "Unblock" button -->
                                                                    </a>
                                                                <% } %>
                                                            </div>
                                                        </td>   
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                        
                                </thead>
                               
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
            </div>
        </footer>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/vendors/chart.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
    <script src="assets/js/custom-chart.js" type="text/javascript"></script>
</body>


