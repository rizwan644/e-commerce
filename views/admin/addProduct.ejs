<%- include('../layout/adminHeader.ejs') %>

    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Add Product </h2>
                    <p>Add, edit or delete a Category</p>
                </div>
            
            </div>
      
               
            <div class="card">
                <!-- <div class="card-body"> -->
                <div class="p-5 shadow mb-5 bg-white rounded">
                    <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
                        <div>
                            <div class="col-md-9">
                                <h6>1. General info</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="description"></textarea>
                                </div>
                                <!-- <div class="mb-4">
                                    <label class="form-label">Type</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="type"></textarea>
                                </div> -->
                                <div class="mb-4">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category">
                                        <!-- You can add options dynamically here using your server-side logic -->
                                        <% category.forEach(function(category) { %>
                                            <option value="<%=category._id%>">
                                                <%= category.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Brand</label>
                                    <input type="text" class="form-control" name="brand">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Stock</label>
                                    <input type="number" class="form-control" name="stock">
                                </div>
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                        <hr class="mb-4 mt-0">
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="form-label">Orginal Price</label>
                                <input type="text" placeholder="₹00.0" class="form-control" name="originalprice">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-9">
                                <h6>2. Pricing</h6>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label">Cost in INR</label>
                                    <input type="text" placeholder="₹00.0" class="form-control" name="productprice">
                                </div>
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                        <hr class="mb-4 mt-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h6>3. Media</h6>
                            </div>
                            <div class="col-md-25">
                                <div class="mb-4">
                                    <label class="form-label">Image</label>
                                    <input class="form-control" multiple type="file" name="images" accept=".jpg, .jpeg, .png">
                                </div>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-outline-danger">Create Product</button>
                            <p style="color: rgb(35, 100, 3); font-weight: bold;" class="text-center">
                                <%=(typeof message!=='undefined')?message:""%>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            
            
            
            
            
            
            
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
            </div>
        </footer>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/vendors/chart.js"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
    <script src="assets/js/custom-chart.js" type="text/javascript"></script>
</body>


